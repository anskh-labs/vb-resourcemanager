<Window x:Class="ResourceManager.Views.SplashScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Width="600"
        Height="300"
        AllowsTransparency="True">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/Assets/Images/bg.png" />
        </Grid.Background>
        <ProgressBar x:Name="_progressBar" Width="250" Height="35" FontSize="16" Margin="229,132,121,132"/>
        <TextBlock x:Name="_message" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="250,0,0,0"/>
        <TextBlock x:Name="_productName" FontSize="32" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="229,46,0,0"/>
        <TextBlock x:Name="_productVersion" FontSize="14" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="229,90,0,0"/>
    </Grid>
</Window>
